}

.sp-text {
  float: left;
  line-height: 20px;
  width: 100%;
}

.sp-tit {
  width: 100%;
  overflow: hidden;
  font-size: 14px;
}

.sp-neb {
  width: 100%;
  overflow: hidden;
  font-size: 12px;
  color: #999;
}

.sp-jg {
  width: 100%;
