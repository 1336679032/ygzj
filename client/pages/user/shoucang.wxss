}

.dle {
  color: #999;
  font-size: 12px;
  float: right;
}

.dle image {
  width: 18px;
  height: 18px;
  vertical-align: sub;
}

.jk-bottom {
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  display: inline-flex;
  border-bottom: 1px solid #eee;
